<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
	http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="production" author="i515142">
        <preConditions onFail="MARK_RAN">
            <dbms type="hana"/>
            <not>
                <tableExists tableName="calculator_expressions" />
                <tableExists tableName="calculation_requests" />
            </not>
        </preConditions>
        <sql>
            CREATE COLUMN TABLE I515142.calculator_requests (id BIGINT GENERATED BY DEFAULT AS IDENTITY NOT NULL,
                                                              expression VARCHAR(500) NOT NULL,
                                                              statusCode INT,
                                                              time_of_creation TIMESTAMP NOT NULL,
                                                              CONSTRAINT PK_CALCULATOR_REQUESTS PRIMARY KEY (id))
        </sql>
        <sql>
            CREATE COLUMN TABLE I515142.calculator_responses (expression VARCHAR(500) NOT NULL,
            calculationResult DOUBLE,
            errorMsg VARCHAR(255),
            CONSTRAINT PK_CALCULATOR_EXPRESSIONS PRIMARY KEY (expression))
        </sql>
    </changeSet>

    <changeSet id="test" author="i515142">
        <preConditions onFail="MARK_RAN">
            <dbms type="derby"/>
            <not>
                <tableExists tableName="calculator_expressions" />
                <tableExists tableName="calculation_requests" />
            </not>
        </preConditions>
        <createTable tableName="calculation_requests"  >
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="expression" type="VARCHAR(500)">
                <constraints nullable="false" />
            </column>
            <column name="statusCode" type="INT"/>
            <column name="time_of_creation" type="TIMESTAMP" >
                <constraints nullable="false" />
            </column>
        </createTable>
        <createTable tableName="calculator_expressions">
            <column name="expression" type="VARCHAR(500)">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="calculationResult" type="DOUBLE"/>
            <column name="errorMsg" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>