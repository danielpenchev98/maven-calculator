<mvc:View
	controllerName="com.calculator.web.ui.controller.CalculatorPanel"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Panel
		class="sapUiResponsiveMargin"
		width="auto" >
		<content>
			<Text text="Enter equation:" class="sapUiSmallMarginEnd sapUiSmallMarginTop"/>
			<Input
                id="equation"
				value="{/result}"
				width="60%"
				maxLength="500"/>
			<Button
					id="calculateButton"
					text="{i18n>calculateButtonText}"
					press=".onCalculation"
					class="sapUiSmallMarginBegin"/>
		</content>
	</Panel>
</mvc:View>
