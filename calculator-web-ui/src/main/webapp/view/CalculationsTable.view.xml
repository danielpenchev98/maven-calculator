<mvc:View
        controllerName="com.calculator.web.ui.controller.CalculationsTable"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">
    <ScrollContainer
            height="525px"
            vertical="true">
        <Table
                id="calculationsTable"
                class="sapUiResponsiveMargin"
                width="auto"
                items="{/}"
                sticky="HeaderToolbar,InfoToolbar,ColumnHeaders">
            <headerToolbar>
                <Toolbar>
                    <Title text="{i18n>calculationsTableTitle}"/>
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column id="equation">
                    <Text text="{i18n>columnEquation}"/>
                </Column>
                <Column id="result">
                    <Text text="{i18n>columnResult}"/>
                </Column>
                <Column id="errorMsg">
                    <Text text="{i18n>columnErrorMsg}"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells class="sapMListTblCell">
                        <ObjectIdentifier title="{equation}"/>
                        <ObjectIdentifier title="{calculationResult}"/>
                        <ObjectIdentifier title="{errorMsg}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </ScrollContainer>
</mvc:View>