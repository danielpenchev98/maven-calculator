<mvc:View
	controllerName="com.calculator.web.ui.controller.CalculatorPanel"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Panel
		class="sapUiResponsiveMargin"
		width="auto" >
		<content>
			<Text text="Enter equation:" class="sapUiSmallMarginEnd sapUiSmallMarginTop" textAlign="center"/>
			<Input
                id="equation"
				value=""
				width="60%"/>
			<Button
					id="calculateButton"
					text="{i18n>calculateButtonText}"
					press=".onOpenDialog"
					class="sapUiSmallMarginBegin"/>
		</content>
	</Panel>
</mvc:View>
