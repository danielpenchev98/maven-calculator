<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <Dialog
            id="errorDialog"
            icon="sap-icon://error"
            title="{i18n>errorDialogTitle}">
        <content>
            <Text  text="{/message}" class="sapUiSmallMargin errMessageColor" />
        </content>
        <beginButton>
            <Button
                    text="{i18n>dialogCloseButtonText}"
                    press=".onCloseDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
