<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <Dialog
            id="errorDialog"
            title="{i18n>errorDialogTitle}">
        <content>
            <Text text="{/message}"/>
        </content>
        <beginButton>
            <Button
                    text="{i18n>dialogCloseButtonText}"
                    press=".onCloseDialog"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
